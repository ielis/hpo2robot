<AnchorPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.monarchinitiative.controller.MainWindowController">
    <MenuBar prefHeight="23.0" prefWidth="600.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
             AnchorPane.topAnchor="0.0">
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" text="Open"/>
            <MenuItem mnemonicParsing="false" text="Login" onAction="#addAccount"/>
            <MenuItem mnemonicParsing="false" text="Close"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
            <MenuItem mnemonicParsing="false" onAction="#optionsAction" text="Options"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" text="About"/>
        </Menu>
    </MenuBar>
    <TreeView fx:id="emailTreeview" layoutY="28.0" prefHeight="373.0" prefWidth="197.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="27.0"/>
    <TableView fx:id="emailsTableview" layoutX="197.0" layoutY="28.0" prefHeight="179.0" prefWidth="1004.0"
               AnchorPane.leftAnchor="196.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="27.0">
      <columns>
          <TableColumn prefWidth="75.0" text="Sender"/>
          <TableColumn prefWidth="75.0" text="Subject"/>
          <TableColumn prefWidth="75.0" text="Size"/>
          <TableColumn prefWidth="75.0" text="Date"/>
          <TableColumn prefWidth="75.0" text="Recipient"/>
      </columns>
    </TableView>
    <WebView fx:id="emailsWebview" layoutX="197.0" layoutY="206.0" prefHeight="594.0" prefWidth="1003.0"
             AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="197.0" AnchorPane.rightAnchor="0.0"
             AnchorPane.topAnchor="206.0"/>
</AnchorPane>
