<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.monarchinitiative.controller.RobotPaneController">
    <GridPane layoutY="76.0" prefHeight="164.0" prefWidth="600.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="296.0" minWidth="10.0" prefWidth="117.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="484.0" minWidth="10.0" prefWidth="483.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Label text="Parent term" GridPane.rowIndex="1"/>
        <Label text="Definition" GridPane.rowIndex="2"/>
        <Label text="Comment" GridPane.rowIndex="3"/>
        <Label text="Additional info" GridPane.rowIndex="4"/>
        <TextField fx:id="definitionTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <TextField fx:id="commentTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <TextField fx:id="parentTermTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <Button mnemonicParsing="false" onAction="#addPmidAction" text="Add PMID"/>
            <Button mnemonicParsing="false" onAction="#addSynonymAction" text="Add synonym"/>
        </HBox>
        <Label text="Term label"/>
        <TextField fx:id="termLabelTextField" GridPane.columnIndex="1"/>
    </GridPane>
    <WebView fx:id="robotWebView" layoutY="243.0" prefHeight="157.0" prefWidth="600.0"/>
    <Label layoutX="237.0" layoutY="25.0" text="New ROBOT Entry"/>
</AnchorPane>
